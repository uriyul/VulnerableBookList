@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}
<h1 class="text-info">Login Page</h1>

<div class="border container p-3">
    <form action="Login?ReturnUrl=@System.Net.WebUtility.UrlDecode(returnUrl)" method="post">
        <div class="row p-3">
            <label class="col-2">Username </label>
            <input type="text" name="username" value="" class="col-3" />
        </div>
        <div class="row p-3">
            <label class="col-2">Password</label>
            <input type="password" name="password" value="" class="col-3" />
        </div>
        @if (!string.IsNullOrEmpty(error))
        {
            <div class="row p-3">
                <label class="col-5 alert-danger">@error</label>
            </div>
        }
        <button type="submit" class="btn-success rounded col-2 offset-2">Login</button>

    </form>
</div>