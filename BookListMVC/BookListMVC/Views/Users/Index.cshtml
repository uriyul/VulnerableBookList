<br />
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <input hidden id="isAdmin" value="true" />
}
else
{
    <input hidden id="currentUser" value="none" />
    <input hidden id="isAdmin" value=false />
}
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Users List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Create" asp-controller="Users" class="btn btn-info form-control text-white">
            Add a New User
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_users" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/usersList.js"></script>
}